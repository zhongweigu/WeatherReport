.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background-color: #f4f4f4;
  height: 100vh;
  opacity: 75%;
  margin-top:-50rpx;
  
}

.search-section {
  display: flex;
  width: 100%;
  position: relative;
  margin-bottom: 20rpx;
}

.search-input {
  flex-grow: 1;
  background-color: #ffffff;
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  padding: 10rpx 20rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
}

.search-btn {
  background-color: #3A7BFD;
  color: white;
  padding: 10rpx 30rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.weather-list {
  width: 100%;
  flex-grow: 1;
  overflow-y: auto;
  
}

.weather-card {
  background-color: rgb(255, 255, 255);
  border-radius: 15rpx;
  box-shadow: 0 4rpx 6rpx rgba(0,0,0,0.1);
  margin-bottom: 20rpx;
  padding: 20rpx;
  position: relative;
}

.weather-card.sunny {
  background-color: #ffeb3b; /* 明亮的黄色 */
}

.weather-card.cloudy {
  background-color: #90a4ae; /* 阴天，灰色 */
}

.weather-card.rainy {
  background-color: #42a5f5; /* 蓝色 */
}

.weather-card.snowy {
  background-color: #f2f2f2; /* 雪天，浅灰色 */
}
.weather-card.default {
  background-color: #ffffff; /* 默认白色 */
}

.weather-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.city-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.delete-btn {
  color: #FF4444;
  font-size: 40rpx;
  font-weight: bold;
  padding: 0 10rpx;
}

.weather-content {
  display: flex;
  flex-direction: column;
}

.weather-info {
  display: flex;
  flex-direction: column;
}

.weather-info text {
  margin-bottom: 10rpx;
  font-size: 28rpx;
  color: #666;
}

