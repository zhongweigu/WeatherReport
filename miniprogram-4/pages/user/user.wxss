/* pages/user/user.wxss */
page{
  background-image: "/pictures/bc-pic.png";
}

.bc1{
  background-size: cover;
  background-position: center;
  background-repeat:no-repeat;
  width:100%;
  height:100vh;
  position: relative;
  opacity: 75%;
  z-index: 0;
  margin-bottom:-1250rpx;
}

.container{
  margin: 20rpx 20rpx 0;
}


.userbox{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: rgb(152, 201, 233);
  border-radius: 20rpx;
  width: 95%;
  margin-top: -200rpx;
}

.picture{
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
}

.userCenter{
  flex: 1;
  margin-left: 20rpx;
}

.title{
  font-size: 35rpx;
  font-weight: 600;
  color: #000;
}

.person_text{
  padding-top: 10rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: antiquewhite;
}

.service{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  margin-top: 20rpx;
  background: rgb(152, 201, 233);
  border-radius: 20rpx;
  width: 95%;
  font-size: 40rpx;
  font-weight: 400;
  color: #000;
}

.btn {
  display: block;
  width: 95%;
  margin: 10px 0;
  background-color: rgb(32, 150, 57);
}

.detail-page {
  width: 100%;
  height: 100%;
  min-height: 300px;
  display: flex;
  align-items: center;
  justify-content: center;
}